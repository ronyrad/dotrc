
# Perforce configuration
export P4EDITOR=vim
export P4PORT=perforce.qca.qualcomm.com:1666
export P4USer=jasonyo

# per-host custom built applications per
export PATH=~/.$(hostname)-local/bin:$PATH

unset LS_COLORS

ls --color=auto 2>/dev/null
if [ "$?" -eq 0 ]; then
	alias ls='ls --color=auto'
else
	alias ls='ls -G'
fi

alias psa='ps -u `whoami` -Hf'
alias g='gvim'

# disable XON/XOFF flow control
stty -ixon

function bvtags () {
	echo "	TAGS"
	ctags -Rb 
	echo "	CSCOPE"
	cscope -Rb
}                                      

function set_prompt() {
	green=$(tput setaf 1)
	blue=$(tput setaf 4)
	bold=$(tput bold)
	reset=$(tput sgr0)
	export PS1='\[$green$bold\]\h\[$reset\]:\[$blue$bold\]\w\[$reset\]\n$ '
}

# hack to auto completion scripts
for c in ~/.ayj/bash/bash_completion.d/*; do
	source $c
done

set_prompt

if [ -e $HOME/.bash_local ]; then
	source $HOME/.bash_local
fi

